ZSH="${HOME}/.oh-my-zsh"

ZSH_THEME="agnoster"

HYPHEN_INSENSITIVE="true"
COMPLETION_WAITING_DOTS="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"

plugins=(encode64 git pip python tmux urltools)

source ${ZSH}/oh-my-zsh.sh

bindkey "^[^[[D" backward-word
bindkey "^[^[[C" forward-word

share() {
    for fn in "$@"
    do
        rclone copy "$fn" b2:ng-pub
        python3 -c "import urllib.parse,sys;print('https://files.nickgregory.me/file/ng-pub/' + urllib.parse.quote_plus(sys.argv[1]))" "$(basename $fn)"
    done
}

if [[ -f "${HOME}/dotfiles/overrides/zsh/zshrc-overrides" ]]
then
    source "${HOME}/dotfiles/overrides/zsh/zshrc-overrides"
fi
